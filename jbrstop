#!/bin/bash
RECORD_PROCESS_NAME='jbrecord'

record_process=$(ps -ef | grep ${RECORD_PROCESS_NAME} | grep -v grep)
if [ -n ${record_process} ]; then
    pid=$(echo ${record_process} | cut -d ' ' -f2)
    kill -9 ${pid}
fi

sleep 5

record_process=$(ps -ef | grep ${RECORD_PROCESS_NAME} | grep -v grep)
if [ -z ${record_process} ]; then
    echo "ok: stop process ${RECORD_PROCESS_NAME} success"
else
    echo "error: stop process ${RECORD_PROCESS_NAME} failed !!!!"
fi

